.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
/*图片大小自适应*/

image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  display: block;
}

.card {
  width: 100%;
  background-color: #fff;
  margin: 40rpx 0 0;
  height: 245rpx;
  box-sizing: border-box;
  position: relative;
}

page {
  min-height: 100%;
  background-color: #e4e4e4;
  width: 100%;
}

/*清除浮动样式*/

.clearfix {
  zoom: 1;
  clear: both;
}

.clearfix:after {
  display: block;
  height: 0;
  overflow: hidden;
  content: " ";
  visibility: hidden;
  clear: both;
}

.ml30 {
  margin-left: 30rpx;
}



.hidden {
  display: none;
}

.nearCard-fr view {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.nearCard-fr view image {
  width: 44rpx;
  height: 32rpx;
  margin: 0 30rpx 0 20rpx;
}
.card .one-right{
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
    width:44rpx;
    height:44rpx;
}
.card .rightdel{
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  width: 40rpx;
  height: 50rpx;
  padding: 20rpx;
}
.nearCard-fr .card-tit {
  height: 92rpx;
  border-bottom: 1px solid #efefef;
  font-size: 36rpx;
  font-weight: 600;
  margin-left: 10rpx;
}
.nearCard-fr .card-con  {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 86rpx;
  line-height: 86rpx;
}
.nearCard-fr .card-more {
  display: flex;
  justify-content: center;
  color: #4bd7bd;
  font-size: 24rpx;
  line-height: 60rpx;
}

.addnewcar {
  position: fixed;
  left: 50%;
  bottom: 30rpx;
  -webkit-transform: translateX(-50%);
  -moz-transform: translateX(-50%);
  transform:translateX(-50%);
}
.addnewcar image {
  width: 98rpx;
  height: 98rpx;
}