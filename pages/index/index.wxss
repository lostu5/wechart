/**index.wxss**/
/* 轮播图 */
.container {
  background-color: #efefef;
}
.swiper{
    width:100%;
    margin:0rpx;
    position: relative;
    background-color: #fff;
}
.swiper .swiper_cov {
  position: absolute;
  left: 0;
  bottom: -1rpx;
  content: "";
  z-index: 99;
  width: 100%;
  height: 40rpx;
}
.swiper image{
    display: inline;
}
.swiper .wx-swiper-dot{  
    display: inline-flex;  
    justify-content:space-between;  
    border-radius: 50%;  
    width: 10rpx;
    height: 10rpx;
}  
.swiper .wx-swiper-dot::before{  
    content: '';  
    flex-grow: 1;    
    background: white;  
      border-radius: 50%;  
}  
.swiper .wx-swiper-dot-active::before{  
    background:#ff9800;    
      border-radius: 50%;    
}  
/* 搜索 */
.search{
    width:100%;
    height:90rpx;
    background:#efeff4;
    border-bottom:2rpx solid #ddd;
    font-size:28rpx;
    padding-top:25rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.search_input{
    width:610rpx;
    height:64rpx;
    border:1rpx solid #ddd;
    border-radius:12rpx;
    display: flex;
    flex-direction: row;
    justify-content: start;
    background: #ffffff;
    margin-left:10rpx;
    padding:0rpx 10rpx;
    box-sizing:border-box;
}
.search_input .arrow_down_icon{
    width:24rpx;
    height:14rpx;
    margin: 26rpx 10rpx;
}
.search_input .search_icon{
    width:34rpx;
    height:34rpx;
    margin: 15rpx 10rpx 15rpx 20rpx;
}
.search_input .search_icon image,
.search_input .arrow_down_icon image{
    width:100%;
    height: 100%;
    display: block;
}
.search_input input{
    width:470rpx;
    height:64rpx;
    line-height: 64rpx;
    padding:4rpx 20rpx;
    font-size:28rpx;
    font-family:'微软雅黑';
    box-sizing:border-box;
    color:#a9a9a9;
}
.search_input picker{
    height:64rpx;
    line-height: 64rpx;
    text-align: center;
    color:#585858;
    margin-left:6rpx;
}
.search .search_btn{
    margin-top:14rpx;
    color:#38b337;
    font-size:32rpx;
    margin-right:10rpx;
}
/* 导航条 */
.nav_tops .section_ctn {
    width: 112rpx;
    height: 112rpx;
    margin-bottom: 10rpx;
}
.nav_tops {
   display:flex;
    flex-direction: row;
    justify-content: space-around;
    padding-top: 55rpx;
    padding-bottom: 37rpx;
  background-color: #fff;
}
.nav_tops text {
    font-weight: 500;
    font-size:36rpx;
}
.nav_mids {
   display:flex;
    flex-direction: row;
     flex-wrap: wrap;
    justify-content: space-around;
    font-size:28rpx;
    margin-top: 35rpx;
    margin-bottom: 35rpx;
  background-color: #fff;
}
.nav_mids .nav_top_items {
  width: 50%;
  padding: 30rpx 0 30rpx 40rpx;
  text-align: left;
  border-radius: 0;
}
.nav_mids .nav_top_items:nth-child(-n+2) {
  border-bottom: 1rpx solid #efefef;
}

.nav_mids .nav_top_items:nth-child(odd) {
  border-right: 1rpx solid #efefef;
}
.nav_mids .nav_top_items .section_ctn {
  float: left;
  padding-right: 20rpx;
  height: 112rpx;
}
.nav_mids .nav_top_items .mid_tit {
display: block;
padding-top: 10rpx;
padding-bottom: 5rpx;
font-size: 30rpx;
}
.nav_mids .nav_top_items .mid_abs {
display: block;
color: #6f6f6f;
font-size: 30rpx;
}
.nav_mids .nav_top_items button {
  position: absolute;
  opacity: 0;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
}
.tab_lists {
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #fff;
    line-height: 60rpx;
    padding: 20rpx 0 0;

}
.tab_lists .nav_tab_items {
  width: 50%;
  text-align: center;
  height: 80rpx;
  font-size: 40rpx;
}
.tab_lists .nav_tab_items:nth-child(1) .inner_text {
  border-right: 1px solid #efefef;
}
.active-tag {
  border-bottom: 3px solid #4bd7bd;
  color: #4bd7bd;
}
.checkbox {
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #fff;
}
.checkbox  checkbox {
  margin-right: 10rpx;
  color: #4bd7bd;
}

.nav_section_list {
  width: 100%;
  min-height: 30rpx;
  background-color: #fff;
}
.nav_section_list .nav_section_items {
  width: 100%;
  min-height: 50rpx;
  box-sizing: border-box;
}
.nav_section_list .nav_section_items  .section_list{
  width: 100%;
  position: relative;
}
.nav_section_list .nav_section_items image {
  width: 206rpx;
  height: 177rpx;
  float: left;
  padding-right: 17rpx;
  border-radius: 5rpx;
}
.nav_section_list .nav_section_items text {
  display: block;

}
.listhead {
  font-size: 36rpx;
  height: 50rpx;
  overflow: hidden;
}
.listabs,.listads {
  font-size: 28rpx;
}
.listabs {
  line-height: 60rpx;
  color: #7b7b7b;
  height: 60rpx;
}
.listads {
  width: 320rpx;
  overflow: hidden;
  color: #6f6f6f;
  height: 114rpx;
}

.list_location {
  position: absolute;
  right: 0;
  top: 45rpx;
  text-align: center;
}
.section_list .list_location image {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  margin: 0 auto;
  float: none;
}
.section_list .list_location .listabs {
  display: block;
  line-height: 40rpx;
}

.nav_top{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    width:100%;
    text-align: center;
    box-sizing: border-box;
    padding:20rpx 10rpx;
    color:#fff;
}
.nav_top_items{
    text-align: center;
    font-size:28rpx;
   
    border-radius:8rpx;
    box-sizing:border-box;
}
.nav_top_items image{
    width:83rpx;
    height:93rpx;
    display: inline-block;
}
.nav_top .active{
    color:#38b337;
}
.active_red{
    color:#e5004f;
}
.active_orange{
    color:#eb6100;
}
.active_yellow{
    color:#fff100;
}
.active_green{
    color:#8fc31f;
}
.active_purple{
    color:#aa2adf;
}


/* 导航对应内容项 */
.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:400rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_address{
    font-size:32rpx;
    color:#d24a58;
}
.nav_section_items .section_cont_price{
   font-size:32rpx;
    color:#d24a58;
    margin-bottom:10rpx;
}
