<view class="container">
<view class="ar_coverpath">
  
</view>
    <view class="input-list">
      <view class="input-item-title" >
         订单编号：{{orderInfo.orderId}}
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
            <view class='img'><image mode="aspectFill" src="../../images/pubadd.png"></image></view>
             <view class='tex'>地址名称:</view>
        </view>
        <view class="input-item-content" style='padding-top:20rpx;line-height:40rpx;'>
            {{orderInfo.orderAddressName}}
        </view>
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
             <view class='img'><image mode="aspectFill" src="../../images/publoca.png"></image></view>
             <view class='tex'>详细地址:</view>
        </view>
        <view class="input-item-content" style='padding-top:20rpx;line-height:40rpx;'>
            {{orderInfo.orderDetailAddress}}
        </view>
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
             <view class='img'><image mode="aspectFill" src="../../images/pubpayt.png"></image></view>
             <view class='tex'>收费标准:</view>
        </view>
        <view class="input-item-content">
            {{orderInfo.employeeName}}
        </view>
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
             <view class='img'><image mode="aspectFill" src="../../images/pubmay.png"></image></view>
             <view class='tex'>金额:</view>
        </view>
        <view class="input-item-content">
            {{orderInfo.orderFirstPrice}}
        </view>
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
            <view class='img'><image mode="aspectFill" src="../../images/punphone.png"></image></view>
            <view class='tex'>手机号</view>:
        </view>
        <view class="input-item-content">
            {{orderInfo.receiveUserTel}}
        </view>
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
            <view class='img'><image mode="aspectFill" src="../../images/pubtime.png"></image></view>
            <view class='tex'>下单时间</view>:
        </view>
        <view class="input-item-content">
            {{orderInfo.carCard}}
        </view>
      </view>
      <view class="input-item-full">
        <view class="input-item-label" >
            <view class='img'><image mode="aspectFill" src="../../images/pubendt.png"></image></view>
            <view class='tex'>结束时间</view>:
        </view>
        <view class="input-item-content">
            {{orderInfo.carColor}}
        </view>
      </view>
    </view>




</view>
