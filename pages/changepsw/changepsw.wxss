    width:100%;
    margin:0;
    box-sizing:border-box;
    height: 30rpx;
    background-color: #efefef;
}
.container {
  width: 100%;

}
.lists {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.lists .list {
  line-height: 90rpx;
  border-bottom: 1rpx solid #efefef;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #000;
}
.lists .list .listl {
  width: 190rpx;
  text-align: left;
}
.lists .list .listr {
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.lists .light {
  color: #a1a1a1;
}
.lists .mytips {
  font-size: 24rpx;
  color: #a1a1a1;
  line-height: 40rpx;
  text-align: left;
  padding: 20rpx 0;
}
.lists button {
  width: 100%;
  height: 80rpx;
  background-color: #4bd7bd;
  color: #fff;
  border: none;
  margin-top: 20rpx;
  line-height: 80rpx;
}
.lists .fogot {
  color: #4bd7bd;
  font-size: 24rpx;
  line-height: 50rpx;
}