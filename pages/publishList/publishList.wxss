/**publishList.wxss**/
.container{
    padding:0;
    margin:0;
    background-color: #efefef;
}

/**index.wxss**/
.swiper-tab{
    width: 100%;
  /**  border-bottom: 2rpx solid #777777;**/
    text-align: center;
    line-height: 100rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    background-color: #fff;
    }
.swiper-tab-list{  
    font-size: 30rpx;
    float: left;
    display: block;
    width: 25%;
    color: #444444;
    font-weight: 600;
    height: 100rpx
}
.swiper-tab-list text {
   display: inline-block;
   width: 98%;
   font-size: 30rpx;
   height: 80rpx;
}
.on text{
   color: #00ffff;
   border-bottom: 5rpx solid #00ffff;
}
.midd {
  height: 40rpx;
  margin-top: 30rpx;
  width: 2rpx;
  background-color: #dcdcdc;
  float: left;
}
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
.swiper-box view{
    text-align: left;
}


.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont_sub{
    width:100%;
    font-size:26rpx;
    color:#a9a9a9;
    padding: 0 30rpx;
    box-sizing: border-box;
    text-align: left;
}
.nav_section_items .section_cont_sub view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont_sub .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont_sub .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont_price{
    font-size:32rpx;
    color: #ff0000;
}
.nav_section_items .section_cont_price .flag {
  width: 90rpx;
  height: 40rpx;
  border-radius: 5rpx;
} 

button{
    font-size: 32rpx;
    line-height: 72rpx;
    width:100%
}
/**列表样式**/
.nav_section_items {
  height: 235rpx;
  border-bottom: 1px solid #d8d8d8;
  box-sizing: border-box;
  padding: 20rpx;
}
.nav_section_items .title {
   font-size: 30rpx;
   line-height: 50rpx;  
   overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;

}
.nav_section_items .title_b {
   font-size: 36rpx;
}
.nav_section_items .section_cont_sub {
  font-size: 24rpx;
  color: #a1a1a1;
  padding: 10rpx 0 0;
}
.nav_section_items .section_cont_price{
    font-size:36rpx;
    color: #ff0000;
    float: right;
    padding-left: 40rpx;
}
.nav_section_items .section_cont_price .flag {
  width: 90rpx;
  height: 40rpx;
  display: block;
  text-align: center;
  line-height: 40rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  color: #fff;
  margin: 10rpx auto 0;
} 
